            <useTestClasspath>false</useTestClasspath>
            <systemProperties>
              <systemProperty>
                <name>maven.tomcat.port</name>
                <value>8090</value>
                <!-- ?? -->
              </systemProperty>
            </systemProperties>
          </configuration>
          <executions>
            <execution>
              <id>tomcat7-run</id>
              <goals>
                <goal>run-war-only</goal>
              </goals>
              <phase>package</phase>
            </execution>
            <execution>
              <id>tomcat-shutdown</id>
              <goals>
                <goal>shutdown</goal>
              </goals>
              <phase>deploy</phase>
              <configuration>
                <fork>true</fork>
                <port>8090</port>
              </configuration>
            </execution>
          </executions>
